<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = ".SettingsActivity"
    android:scrollbars = "vertical">
    
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
    
        <TextView
            android:id="@+id/settings_activity_new_version_available_textview"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize="22dp"
            android:textColor="@color/secondary_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart = "true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart = "32dp"
            android:text="New version available: alpha_0.1.42"/>
        
        <TextView
            android:id="@+id/settings_activity_current_version_textview"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize="16dp"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/settings_activity_new_version_available_textview"
            android:layout_marginTop="16dp"
            android:layout_alignLeft="@+id/settings_activity_new_version_available_textview"
            android:text="Currrent version: alpha_0.1.42"/>
        
        <Button
            android:id="@+id/settings_activity_whatsappgroup_button"
            android:layout_width = "wrap_content"
            android:layout_height = "32dp"
            android:background="@drawable/green_whatsapp_border_button_backround"
            android:padding="8dp"
            android:textColor="@color/whatsapp_primary_color"
            android:text="Grupo"
            android:layout_below="@+id/settings_activity_current_version_textview"
            android:layout_alignLeft="@id/settings_activity_new_version_available_textview"
            android:layout_alignStart = "@id/settings_activity_new_version_available_textview"
            android:layout_marginTop="32dp"/>
        
    </RelativeLayout>

</ScrollView>