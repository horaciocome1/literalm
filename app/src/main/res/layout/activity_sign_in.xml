<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = "com.tumblr.b1moz.activitiestraining.SignInActivity"
    android:scrollbars="vertical"
    android:background="@color/primary">
    
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
        
        <ImageView
            android:id="@+id/activity_sign_in_logo_image"
            android:layout_width = "80dp"
            android:layout_height = "80dp"
            android:src="@drawable/literalm_logo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:layout_centerHorizontal="true"/>
    
        <EditText
            android:id="@+id/activity_sign_in_email"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:background="@drawable/edittext_backround"
            android:padding="8dp"
            android:layout_below="@id/activity_sign_in_logo_image"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart = "32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>
    
        <EditText
            android:id="@+id/activity_sign_in_password"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@drawable/edittext_backround"
            android:padding="8dp"
            android:layout_below="@+id/activity_sign_in_email"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart = "32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>
    
        <Button
            android:id="@+id/activity_sign_in_button_sign_in"
            android:layout_width = "match_parent"
            android:layout_height = "32dp"
            android:text="Sign In"
            android:background="@drawable/button_backround"
            android:textColor="@color/primary"
            android:layout_below="@+id/activity_sign_in_password"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart = "32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>
    
        <Button
            android:id="@+id/activity_sign_in_button_providers"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text="Use Google or Facebook account"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/primary_light"
            android:textSize="10sp"
            android:layout_below="@+id/activity_sign_in_button_sign_in"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart = "32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>
    
    </RelativeLayout>

</ScrollView>
